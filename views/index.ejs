<!-- include header -->
<%- include('include/_header'); %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <a href="/add-user" class="border-shadow">
                <span class="text-gradient"
                    >New User <i class="fas fa-user"></i
                ></span>
            </a>
        </div>

        <!-- form handling -->
        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Bank Name</th>
                        <th>Branch</th>
                        <th>A/C Type</th>
                        <th>Username</th>
                        <th>Password</th>
                        <th>Trans PW</th>
                        <th>Card Number</th>
                        <th>ATM Pin</th>
                        <th>Action</th>
                    </tr>
                </thead>
                
              
                <tbody>
                    <!-- include show -->
                    <%-include('include/_show'); %>
                    <!-- /include show -->
                </tbody>
            </table>
        </form>
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer'); %>
<!-- /include footer -->
