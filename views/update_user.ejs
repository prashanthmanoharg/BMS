<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"
                    ><i class="fas fa-angle-double-left"></i> All Users</a
                >
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light"
                >Use the below form to Update an account</span
            >
        </div>

        <!-- add user form -->
        <!-- form handling -->
        <form method="POST" id="update_user">
            <div class="new_user">
                <div class="form-group">
                    <label for="name" class="text-light">Account Holder Name</label>
                    <input type="hidden" name="id" value="<%= user._id %>" />
                    <input
                        type="text"
                        name="name"
                        value="<%= user.name %>"
                        placeholder="Your Name"
                    />
                </div>
                <div class="form-group">
                    <label for="bankname" class="text-light">bankname</label>
                    <input
                        type="text"
                        name="bankname"
                        value="<%= user.bankname %>"
                        placeholder="Enter bank name"
                    />
                </div>

                <div class="form-group">
                    <label for="branch" class="text-light">branch</label>
                    <input
                        type="text"
                        name="branch"
                        value="<%= user.branch %>"
                        placeholder="Enter bank branch"
                    />
                </div>

                
                <div class="form-group">
                    <label for="acctype" class="text-light">A/C type</label>
                    <input
                        type="text"
                        name="acctype"
                        value="<%= user.acctype %>"
                        placeholder="Enter account type"
                    />
                </div>
               

                <div class="form-group">
                    <label for="username" class="text-light">Username</label>
                    <input
                        type="text"
                        name="username"
                        value="<%= user.username %>"
                        placeholder="Enter Username"
                    />
                </div>

                <div class="form-group">
                    <label for="password" class="text-light">Password</label>
                    <input
                        type="text"
                        name="password"
                        value="<%= user.password %>"
                        placeholder="Enter Password"
                    />
                </div>

                <div class="form-group">
                    <label for="transpasswd" class="text-light">Transaction PW</label>
                    <input
                        type="text"
                        name="transpasswd"
                        value="<%= user.transpasswd %>"
                        placeholder="Enter Transaction Password"
                    />
                </div>

                <div class="form-group">
                    <label for="cardno" class="text-light">Card Number</label>
                    <input
                        type="text"
                        name="cardno"
                        value="<%= user.cardno %>"
                        placeholder="Enter Card no"
                    />
                </div>

                <div class="form-group">
                    <label for="bankpin" class="text-light">ATM Pin</label>
                    <input
                        type="text"
                        name="bankpin"
                        value="<%= user.bankpin %>"
                        placeholder="Enter Bank Pin"
                    />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn text-dark update">
                        Save
                    </button>
                </div>
            </div>
        </form>
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
