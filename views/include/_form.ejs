<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Account Holder Name</label>
            <input type="hidden" name="id" value="" />
            <input type="text" name="name" value="" placeholder=" Enter Account Holder Name" />
        </div>
        <div class="form-group">
            <label for="bankname" class="text-light">Bank Name</label>
            <input
                type="text"
                name="bankname"
                value=""
                placeholder="Enter Bank Name"
            />
        </div>

        <div class="form-group">
            <label for="branch" class="text-light">Branch</label>
            <input
                type="text"
                name="branch"
                value=""
                placeholder="Enter Bank Branch"
            />
        </div>

        <div class="form-group">
            <label for="acctype" class="text-light">A/C Type</label>
            <input
                type="text"
                name="acctype"
                value=""
                placeholder="Enter Account Type"
            />
        </div>

        <div class="form-group">
            <label for="username" class="text-light">Login Username</label>
            <input
                type="text"
                name="username"
                value=""
                placeholder=" Enter Login Username"
            />
        </div>

        <div class="form-group">
            <label for="password" class="text-light">Login Password</label>
            <input
                type="text"
                name="password"
                value=""
                placeholder="Enter Login User Password"
            />
        </div>


        <div class="form-group">
            <label for="transpasswd" class="text-light">Transaction Pw</label>
            <input
                type="text"
                name="transpasswd"
                value=""
                placeholder="Enter Transaction password"
            />
        </div>

        <div class="form-group">
            <label for="cardno" class="text-light">Card Number</label>
            <input
                type="text"
                name="cardno"
                value=""
                placeholder="Enter Card Number"
            />
        </div>

        <div class="form-group">
            <label for="bankpin" class="text-light">ATM Pin</label>
            <input
                type="text"
                name="bankpin"
                value=""
                placeholder="Enter ATM Pin"
            />
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>
    </div>
</form>
